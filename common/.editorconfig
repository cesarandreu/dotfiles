# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_size = 8
indent_style = tab

[*.md]
# Markdown uses trailing whitespaces
# https://daringfireball.net/projects/markdown/syntax#block
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[Makefile]
indent_style = tab
